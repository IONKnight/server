<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
    
    <listener>
        <description>ServletContextListener</description>
        <listener-class>museum.listener.DatabaseInit</listener-class>
    </listener>
    <context-param>
        <param-name>dbURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/museum_server_database</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value/>
    </context-param>
    
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <servlet-class>servlets.LoginPage</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/displayuser.do</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
