<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>museum.listener.DatabaseInit</listener-class>
    </listener>
    <context-param>
        <param-name>dbURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/museum_server_database</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value/>
    </context-param>
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <servlet-class>servlets.LoginPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Portal</servlet-name>
        <servlet-class>servlets.Portal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveUser</servlet-name>
        <servlet-class>servlets.RemoveUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyUser</servlet-name>
        <servlet-class>servlets.ModifyUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyUserAction</servlet-name>
        <servlet-class>servlets.ModifyUserAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>servlets.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewUser</servlet-name>
        <servlet-class>servlets.AddNewUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/displayuser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Portal</servlet-name>
        <url-pattern>/displayPortal.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveUser</servlet-name>
        <url-pattern>/admin/RemoveUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyUser</servlet-name>
        <url-pattern>/admin/ModifyUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyUserAction</servlet-name>
        <url-pattern>/admin/ModifyUserAction.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewUser</servlet-name>
        <url-pattern>/AddNewUser.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
